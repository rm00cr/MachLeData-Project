# Dockerfile
FROM ghcr.io/astral-sh/uv:python3.10-bookworm-slim

RUN apt-get update && \
    apt-get install -y curl && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

RUN uv init
RUN uv add mlflow[extras] scikit-learn pandas
#saved_models/gb_model
# Copy the saved MLflow model folder into the container.
COPY ./mlruns /opt/mlflow/mlruns

# Expose the MLflow serving port
EXPOSE 8080

# Final command to serve the model.
CMD ["uv", "run", "python", "-m", "mlflow", "server", "--no-conda", "-m", "/opt/mlflow/mlruns", "-h", "0.0.0.0", "-p", "8080"]